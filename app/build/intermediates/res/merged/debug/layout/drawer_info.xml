                        android:gravity="center_vertical"
                        android:textSize="@dimen/drawer_info_group_title_text_size"
                        android:text="@string/cur_page"/>

                    <com.gk969.View.RadiusCornerButton
                        android:id="@+id/open_cur_page"
                        android:layout_width="@dimen/drawer_info_button_open_width"
                        android:layout_height="match_parent"
                        android:text="@string/open"
                        android:textSize="@dimen/drawer_info_item_value_text_size"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_info_item_height"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/drawer_info_item_margin_top"
                    android:paddingLeft="@dimen/drawer_info_item_padding_left">

                    <TextView
                        android:layout_width="@dimen/drawer_info_item_name_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/drawer_info_item_name_text_size"
                        android:text="@string/title"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/cur_page_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/drawer_info_item_padding_left"
                    android:textColor="@color/drawer_info_item_value_text_color"
                    android:textSize="@dimen/drawer_info_item_value_text_size"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_info_item_height"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/drawer_info_item_margin_top"
                    android:paddingLeft="@dimen/drawer_info_item_padding_left">

                    <TextView
                        android:layout_width="@dimen/drawer_info_item_name_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/drawer_info_item_name_text_size"
                        android:text="@string/web_url"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/cur_page_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/drawer_info_item_padding_left"
                    android:textColor="@color/drawer_info_item_value_text_color"
                    android:textSize="@dimen/drawer_info_item_value_text_size"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_info_ctrl_panel_height"
        android:orientation="horizontal"
        android:background="#EEE">

        <TextView
            android:id="@+id/project_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/drawer_info_group_title_text_size"/>

        <com.gk969.View.RadiusCornerImageButton
            android:id="@+id/project_ctrl"
            android:layout_width="@dimen/drawer_info_button_ctrl_width"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/start"
            android:src="@drawable/start"
            />

    </LinearLayout>
</LinearLayout>