<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_bar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageButton
        android:id="@+id/button_add_project"
        android:layout_width="match_parent"
        android:layout_height="@dimen/projbar_height"
        android:padding="5dp"
        android:src="@drawable/new_proj"
        android:contentDescription="@string/newProj"
        android:scaleType="fitCenter"
        android:background="@drawable/button_bcakground_selector"
        />


    <LinearLayout
        android:id="@+id/album_ctrl_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/projbar_height"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/big_menu"
            android:contentDescription="@string/menu"
            android:scaleType="fitCenter"
            android:background="@drawable/button_bcakground_selector" />

        <ImageButton
            android:id="@+id/buttonPauseOrContinue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/start"
            android:contentDescription="@string/start"
            android:scaleType="fitCenter"
            android:background="@drawable/button_bcakground_selector" />

        <ImageButton
            android:id="@+id/buttonSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/setting"
            android:contentDescription="@string/settings"
            android:scaleType="fitCenter"
            android:background="@drawable/button_bcakground_selector" />

    </LinearLayout>
</LinearLayout><!-- From: file:/F:/android/UltimateImgSpider/app/src/main/res/layout/proj_bar.xml -->