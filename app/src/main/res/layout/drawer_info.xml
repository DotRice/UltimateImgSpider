                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/drawer_info_item_value_text_size"
                    android:textColor="@color/drawer_info_item_value_text_color"
                    />
