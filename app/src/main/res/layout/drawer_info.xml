        android:layout_height="@dimen/drawer_info_title_height"
        android:background="@color/drawer_info_title_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_project_site"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/drawer_info_title_text_size"
