<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <com.gk969.gallery.gallery3d.ui.GLRootView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gl_root_view"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!--
        <ImageView
            android:id="@+id/imgTest"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"/>
            -->

        <ImageButton
            android:id="@+id/button_add"
            android:layout_width="@dimen/button_add_size"
            android:layout_height="@dimen/button_add_size"
            android:src="@drawable/add"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter"
            android:background="@drawable/button_add_corners_background"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="@dimen/button_info_size"
            android:layout_height="@dimen/button_info_size"
            android:src="@drawable/green_menu"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/button_info_corners_background"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <include
        android:layout_height="match_parent"
        android:layout_width="@dimen/drawer_info_width"
        android:layout_gravity="start"
        layout="@layout/drawer_info"/>
</android.support.v4.widget.DrawerLayout>